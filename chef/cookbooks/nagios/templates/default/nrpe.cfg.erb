pid_file=/var/run/nagios/nrpe.pid
server_port=5666
server_address=<%= @own_admin_ip %>
nrpe_user=nagios
nrpe_group=nagios
dont_blame_nrpe=0
debug=0
command_timeout=60

include_dir=/etc/nagios/nrpe.d/

<% unless @mon_host.nil? or @mon_host.empty? -%>
allowed_hosts=<%= @mon_host.join(',') %>
<% end -%>

command[check_users]=<%= @plugin_dir %>/check_users -w 20 -c 30
command[check_load]=<%= @plugin_dir %>/check_load -w <%= node[:nagios][:checks][:load][:warning] %> -c <%= node[:nagios][:checks][:load][:critical] %>
command[check_all_disks]=<%= @plugin_dir %>/check_disk -w 8% -c 5% -A -x /dev/shm -X nfs -i /boot
command[check_zombie_procs]=<%= @plugin_dir %>/check_procs -w 5 -c 10 -s Z
command[check_total_procs]=<%= @plugin_dir %>/check_procs -w 500 -c 800
command[check_swap]=<%= @plugin_dir %>/check_swap -w '50%' -c '25%'
command[check_mem]=<%= @plugin_dir %>/check_mem.sh -w <%= node[:nagios][:checks][:memory][:warning] %> -c <%= node[:nagios][:checks][:memory][:critical] %> -p
command[check_chef_client]=<%= @plugin_dir %>/check_procs -w 1:2 -c 1:2 -C chef-client
command[check_smtp]=<%= @plugin_dir %>/check_smtp -H <%= node[:nagios][:checks][:smtp_host] %>
command[check_nginx]=<%= @plugin_dir %>/check_procs -w 2:3 -c 1:5 -C nginx
command[check_sphinx]=<%= @plugin_dir %>/check_procs -c 1:1 -C searchd
<% unless node[:mysql].nil? -%>
	command[check_mysql_server]=<%= @plugin_dir %>/check_mysql -H localhost -u debian-sys-maint -p <%= node[:mysql][:server_debian_password] %>
<% end -%>
