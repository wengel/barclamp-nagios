command[check_gmetad]=<%= @plugin_dir %>/check_procs -w 1:2 -c 1:2 -C gmetad

command[check_local_time]=<%= @plugin_dir %>/check_ntp_time -H 127.0.0.1

command[check_ntp]=<%= @plugin_dir %>/check_ntp -H <%= @ntp_servers %>
<% if @provisioner_ip -%>
  command[check_dhcp]=<%= @plugin_dir %>/check_dhcp -s <%= @provisioner_ip %> -u -i <%= @admin_interface %>
<% end -%>
command[check_dns]=<%= @plugin_dir %>/check_dns -H <%= @domain_name %>

command[check_apt]=<%= @plugin_dir %>/plugins/check_apt

